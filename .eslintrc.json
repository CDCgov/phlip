{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      2,
      "never"
    ],
    "eol-last": 0,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "ignoredNodes": [
          "JSXElement",
          "JSXElement > *",
          "JSXAttribute",
          "JSXIdentifier",
          "JSXNamespacedName",
          "JSXMemberExpression",
          "JSXSpreadAttribute",
          "JSXExpressionContainer",
          "JSXOpeningElement",
          "JSXClosingElement",
          "JSXText",
          "JSXEmptyExpression",
          "JSXSpreadChild"
        ]
      }
    ],
    "dot-location": [
      2,
      "property"
    ],
    "eqeqeq": [
      2,
      "always"
    ],
    "no-mixed-requires": 1,
    "no-underscore-dangle": 0,
    "no-multi-spaces": 2,
    "block-spacing": [
      2,
      "always"
    ],
    "brace-style": [
      2
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "no-useless-escape": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "no-tabs": 2,
    "no-whitespace-before-property": 2,
    "function-paren-newline": [
      2,
      "consistent"
    ],
    "react/prefer-es6-class": [
      2,
      "always"
    ],
    "react/jsx-curly-spacing": [
      2,
      "never"
    ],
    "react/jsx-first-prop-new-line": [
      2,
      "multiline"
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "react/jsx-props-no-multi-spaces": 2,
    "react/jsx-closing-bracket-location": [
      2,
      {
        "nonEmpty": "after-props",
        "selfClosing": "line-aligned"
      }
    ],
    "react/jsx-max-props-per-line": [
      2,
      {
        "maximum": 1,
        "when": "multiline"
      }
    ],
    "react/no-typos": 2,
    "react/self-closing-comp": 1,
    "react/jsx-indent-props": [
      2,
      2
    ],
    "react/jsx-no-bind": [
      1,
      {
        "allowArrowFunctions": true
      }
    ],
    "react/sort-comp": 1,
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-tag-spacing": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/prop-types": 1,
    "no-console": 0,
    "no-unused-vars": [
      1,
      {
        "ignoreRestSiblings": true,
        "args": "none"
      }
    ],
    "react/jsx-uses-vars": 1,
    "no-case-declarations": 0,
    "react/no-deprecated": 1,
    "react/no-find-dom-node": 0,
    "react/no-unescaped-entities": 0
  },
  "settings": {
    "react": {
      "createClass": "Component",
      "pragma": "React",
      "version": "16.5.0"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "APP_IS_SAML_ENABLED": false,
    "APP_API_URL": false,
    "APP_DOC_ANAGE_API": false,
    "APP_LOG_REQUESTS": false,
    "APP_IS_PRODUCTION": false,
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  },
  "env": {
    "jest": true,
    "browser": true,
    "node": true,
    "es6": true
  }
}
